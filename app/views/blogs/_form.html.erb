<%= form_with(model: @blog, local: true, url: choose_new_or_edit) do |f| %>
  <% if @blog.errors.any? %>
    <div class="error_message">
      <h3><%= @blog.errors.count %>件のエラーがあります</h3>
      <ul>
        <% @blog.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
      </ul>
    </div>
  <% end %>
  <div class="blog_title">
    <%= f.label :title, 'タイトル' %><br>
    <%= f.text_field :title %>
  </div>
  <div class="blog_content">
    <%= f.label :content, 'ブログ本文' %><br>
    <%= f.text_area :content %>
  </div>
  <%= f.submit 'ブログ作成' %><br>
  <%= link_to 'ブログ一覧に戻る', blogs_path %>
<% end %>
